<div class="row justify-content-center">
  <div class="col-md-5 text-center">
    <img id="instagram" class="img-fluid" src="img/phones.png" alt="Instagram">
  </div>

  <div class="col-md-5 text-center align-self-center">

    <div class="whiteBox">

      <a href="/">
        <img class="img-fluid mx-auto d-block" src="img/logo.png" alt="instagram logo">
      </a>




      <br>
      <form class="text-center justify-content-center" method="POST" action="/authenticate">
        <p class="btn btn-primary">Login with Instagram</p>
        <div style="display:inline-block;" class="text-center form-group justify-content-center">
          <input style="display:block; margin:10px" type="text" class="form-control" name="username" id="username" placeholder="Username" required>
          <input style="display:block; margin:10px" type="password" class="form-control" name="password" id="password" placeholder="Password" required>
        </div>
        <br>
      <button class="btn btn-primary">Login</button>
      </form>
      <p class="whiteBox">
        Don't have an account? <a href="/register">Register</a>
      </p>
    </div>



  </div>

</div>
